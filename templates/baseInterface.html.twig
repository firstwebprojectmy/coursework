{% extends 'base.html.twig' %}

{% block title %}{{ title }} {% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CourseWork</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link" href="http://coursework.com/">All Posts</a>
                <a class="nav-item nav-link" href="http://coursework.com/popular">Popular</a>
                {% if not is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                    <a class="nav-item nav-link" href="/preferences">Preferences</a>"
                {% endif %}
                {% if is_granted("ROLE_BLOGGER") %}
                    <a class="nav-item nav-link" href="#">My Posts</a>
                    <a class="nav-item nav-link" href="#">Create New Post</a>
                {% endif %}
                <div class="btn-group">
                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false">
                        Menu
                    </button>
                    <div class="dropdown-menu">
                        {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                            <a class="dropdown-item" href="http://coursework.com/login">Login</a>
                            <a class="dropdown-item" href="http://coursework.com/registration">Register</a>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <a class="dropdown-item" href="#">My Profile</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="dropdown-item" href="#">Administration</a>"
                            {% endif %}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                {% for post in posts %}
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                {% if post.image!="" %}
                                    <img src={{ post.image }} class="card-img" style="height: 200px; width: 200px;"
                                         alt="...">
                                {% else %}
                                    <img src="https://uaprom-static.c2.prom.st/image/new_design/images/no_image-hce614324446b22b42a09b69093e309fce.png"
                                         style="height: 200px; width: 200px;" class="card-img" alt="...">
                                {% endif %}
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h4 class="card-title">{{ post.title }}</h4>
                                    <p class="card-text">{{ post.text|slice(0,80) }}</p>

                                    <button type="button" class="btn btn-outline-primary">Like
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Facebook_like_thumb.png/700px-Facebook_like_thumb.png"
                                             style="width: 20px;height: 20px;" alt="">
                                        <label for="formGroupExampleInput">{{ post.like }}</label></button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="navigation text-center" >
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>

    </div>

{% endblock %}
