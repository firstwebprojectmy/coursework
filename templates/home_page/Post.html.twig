{% extends 'baseInterface.html.twig' %}
{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <div class="card mb-2" style="width: 100%;height: 50px;">
            <div class="row no-gutters">
                <div class="col-md-2">
                    <img src="" class="card-img" alt="..." style="height: 50px; width: 50px;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ autor.firstName }}</h5>
                    </div>
                </div>
                <div class="col-md-2">
                    {% if follow %}
                        <button type="button" class="btn btn-outline-primary" style="height: 50px;">UnFollow</button>
                    {% else %}
                        <button type="button" class="btn btn-outline-primary active" style="height: 50px;">Follow</button>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <div class="card-body">
                        <h4 class="card-title">{{ post.title }} </h4>
                        <p class="card-text">{{ post.textDescription }}</p>
                        {% if userLike %}
                            <button type="button" class="btn btn-outline-primary active">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Facebook_like_thumb.png/700px-Facebook_like_thumb.png"
                                     style="width: 20px;height: 20px;" alt="">
                                <label for="formGroupExampleInput">{{ likes }}</label></button>
                        {% else %}
                            <button type="button" class="btn btn-outline-primary">Like
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Facebook_like_thumb.png/700px-Facebook_like_thumb.png"
                                     style="width: 20px;height: 20px;" alt="">
                                <label for="formGroupExampleInput">{{ likes }}</label></button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% endblock %}