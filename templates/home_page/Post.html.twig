{% extends 'baseInterface.html.twig' %}
{% block body %}
    {% block menu %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <div class="card mb-2" style="width: 100%;height: 50px;">
            <div class="row no-gutters">
                <div class="col-md-2">
                    <img src="{{ autor.image }}" class="card-img" alt="..." style="height: 50px; width: 50px;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ autor.name }}</h5>
                    </div>
                </div>
                <div class="col-md-2">
                    {% if follower %}
                        <button type="button" class="btn btn-outline-primary" style="height: 50px;">UnFollow</button>
                    {% else %}
                        <button type="button" class="btn btn-outline-primary active" style="height: 50px;">Follow</button>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-2">
                    {% if post.image!="" %}
                        <img src={{ post.image }} class="card-img" style="height: 200px; width:200px; "
                             alt="...">
                    {% else %}
                        <img src="https://uaprom-static.c2.prom.st/image/new_design/images/no_image-hce614324446b22b42a09b69093e309fce.png"
                             style="height: 200px; width: 200px;" class="card-img" alt="...">
                    {% endif %}
                </div>
                <div class="col-md-4">
                    <div class="card-body">
                        <h4 class="card-title">{{ post.title }}  <h5>{{ post.data }}</h5></h4>
                        <p class="card-text">{{ post.text }}</p>
                        {% if post.isLiked %}
                            <button type="button" class="btn btn-outline-primary active">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Facebook_like_thumb.png/700px-Facebook_like_thumb.png"
                                     style="width: 20px;height: 20px;" alt="">
                                <label for="formGroupExampleInput">{{ post.like }}</label></button>
                        {% else %}
                            <button type="button" class="btn btn-outline-primary">Like
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/13/Facebook_like_thumb.png/700px-Facebook_like_thumb.png"
                                     style="width: 20px;height: 20px;" alt="">
                                <label for="formGroupExampleInput">{{ post.like }}</label></button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% endblock %}